!!! 5
%html(lang="en")
  %head
    %title
      Все твиттеры ВГУ ФКН
    %link{ rel: 'stylesheet', href: '/css/bootstrap.min.css', type: "text/css" }
    %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon" }
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    %link{ rel: 'stylesheet', href: '/css/bootstrap-responsive.min.css', type: "text/css" }
    %link{ rel: 'stylesheet', href: '/css/custom.css', type: "text/css" }
    %script{ src: '/js/jquery-1.7.2.min.js', type: "text/javascript" }
    %script{ src: '/js/jquery.infinitescroll.js', type: "text/javascript" }
    %script{ src: "http://#{@request.host}:9292/faye.js", type: "text/javascript" }
    %script{ src: '/js/csf-twi.js', type: "text/javascript" }

  %body{"data-host" => @request.host}
    :erb
      <a href="https://github.com/Mehonoshin/csf-twi"><img style="position: absolute; z-index: 1000; top: 40px; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub"></a>
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{:href => "/", :class => "brand"}= "CS Twi"
          .nav-collapse
            %ul.nav
              %li{:class => @request.path == "/" ? "active" : ""}
                %a{:href => "/"}= "Твиты"
              %li{:class => @request.path == "/twiple" ? "active" : ""}
                %a{:href => "/twiple", :class => ""}= "Люди"
              %li
                %a{:href => "http://twitter.com/CSFTwi", :target => "blank", :class => ""}= "Наш твиттер"
              %li{:class => @request.path == "/about" ? "active" : ""}
                %a{:href => "/about", :class => ""}= "О проекте"

    .container
      - unless @message.nil?
        .hero-unit
          = @message
      .row
        .span12
          = yield
